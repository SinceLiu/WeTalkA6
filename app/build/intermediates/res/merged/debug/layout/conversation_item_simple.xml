<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="6px"
    android:paddingRight="6px">
    <TextView 
        android:id="@+id/conversaion_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16px"
        android:textColor="#8a8a8b"
        android:text="@string/app_name"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversaion_item_time">
        <!--rec_voice_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_rec_voice_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone">
	        <TextView
	            android:id="@+id/conversation_item_rec_voice_user_name"
	            style="@style/UserNameStyle"/>
	        <FrameLayout
	            android:id="@+id/conversation_item_rec_voice_play"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_below="@id/conversation_item_rec_voice_user_name">
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/answer_bg_selector"
	                android:layout_gravity="center_vertical"/>
	            <ImageView
	                android:id="@+id/conversation_item_rec_voice_play_anim"
	                android:layout_width="21px"
	                android:layout_height="30px"
	                android:background="@anim/play"
	                android:layout_gravity="center_vertical|right"
	                android:layout_marginRight="15px"
	                android:visibility="gone"/>
	            <ImageView
	                android:id="@+id/conversation_item_rec_voice_play_imgv"
	                android:layout_width="21px"
	                android:layout_height="30px"
	                android:background="@drawable/play3"
	                android:layout_gravity="center_vertical|right"
	                android:layout_marginRight="15px"/>
	            <TextView
		            android:id="@+id/conversation_item_rec_voice_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="25px"
		            android:textColor="@android:color/black"
		            android:text="@string/app_name"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="10px"
		            android:maxLength="4"/>
	        </FrameLayout>
	        <View
	            android:id="@+id/conversation_item_rec_voice_unread"
	            android:layout_width="@dimen/conversation_play_width"
	            android:layout_height="@dimen/conversation_play_width"
	            android:background="@drawable/unread_bg"
	            android:layout_marginLeft="6px"
	            android:layout_marginTop="15px"
	            android:layout_toRightOf="@id/conversation_item_rec_voice_play"/>
	    </RelativeLayout>
	    <!--send_voice_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_send_voice_item"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:gravity="right">
	        <FrameLayout
	            android:id="@+id/conversation_item_send_voice_play"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true">
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/send_voice_bg_selector"/>
	            <ImageView
	                android:id="@+id/conversation_item_send_voice_play_anim"
	                android:layout_width="21px"
	                android:layout_height="30px"
	                android:background="@anim/play_wht"
	                android:layout_gravity="center_vertical"
	                android:visibility="gone"
	                android:layout_marginLeft="15px"/>
	            <ImageView
	                android:id="@+id/conversation_item_send_voice_play_imgv"
	                android:layout_width="21px"
	                android:layout_height="30px"
	                android:background="@drawable/play_wht3"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="15px"/>
		        <TextView
		            android:id="@+id/conversation_item_send_voice_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="25px"
		            android:textColor="@android:color/white"
		            android:text="@string/app_name"
		            android:layout_gravity="center_vertical|right"
		            android:layout_marginRight="10px"
		            android:maxLength="4"/>
	        </FrameLayout>
	        <ImageView
	            android:id="@+id/conversation_item_send_voice_progress"
	            android:layout_width="@dimen/retry_square_btn_width"
	            android:layout_height="@dimen/retry_square_btn_width"
	            android:visibility="gone"
	            android:layout_margin="6px"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@id/conversation_item_send_voice_play"/>
	        <ImageView
	            android:id="@+id/conversation_item_send_voice_resend_btn"
	            android:layout_width="@dimen/retry_square_btn_width"
	            android:layout_height="@dimen/retry_square_btn_width"
	            android:background="@drawable/retry_btn_selector"
	            android:visibility="gone"
	            android:clickable="true"
	            android:layout_margin="6px"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@id/conversation_item_send_voice_play"/>
	    </RelativeLayout>
	    <!--rec_emoji_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_rec_emoji"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone">
	        <TextView
	            android:id="@+id/conversation_item_rec_emoji_user_name"
	            style="@style/UserNameStyle"/>
	        <ImageView
	            android:id="@+id/conversation_item_rec_emoji_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/conversation_item_rec_emoji_user_name"
	            android:layout_marginLeft="9px"/>
	    </RelativeLayout>
	    <!--send_emoji_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_send_emoji"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone">
	        <ImageView
	            android:id="@+id/conversation_item_send_emoji_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="9px"/>
	        <ImageView
	            android:id="@+id/conversation_item_send_emoji_progress"
	            android:layout_width="@dimen/retry_square_btn_width"
	            android:layout_height="@dimen/retry_square_btn_width"
	            android:visibility="gone"
	            android:layout_toLeftOf="@id/conversation_item_send_emoji_content"
	            android:layout_margin="6px"
	            android:layout_centerVertical="true"/>
	        <ImageView
	            android:id="@+id/conversation_item_send_emoji_resend_btn"
	            android:layout_width="@dimen/retry_square_btn_width"
	            android:layout_height="@dimen/retry_square_btn_width"
	            android:background="@drawable/retry_btn_selector"
	            android:visibility="gone"
	            android:clickable="true"
	            android:layout_toLeftOf="@id/conversation_item_send_emoji_content"
	            android:layout_margin="6px"
	            android:layout_centerVertical="true"/>
	    </RelativeLayout>
	    <!--rec_image_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_rec_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:paddingBottom="3px">
	        <TextView
	            android:id="@+id/conversation_item_rec_image_user_name"
	            style="@style/UserNameStyle"/>
	        <ImageView
	            android:id="@+id/conversation_item_rec_image_content"
	            android:layout_width="120px"
	            android:layout_height="106px"
	            android:layout_below="@id/conversation_item_rec_image_user_name"/>
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/image_mask_left"
	            android:layout_below="@id/conversation_item_rec_image_user_name"/>
	    </RelativeLayout>
	    <!--send_image_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_send_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:paddingBottom="3px">
	        <ImageView
	            android:id="@+id/conversation_item_send_image_content"
	            android:layout_width="120px"
	            android:layout_height="106px"
	            android:layout_alignParentRight="true"/>
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:src="@drawable/image_mask"/>
	        <ImageView
	            android:id="@+id/conversation_item_send_image_progress"
	            android:layout_width="@dimen/retry_square_btn_width"
	            android:layout_height="@dimen/retry_square_btn_width"
	            android:visibility="gone"
	            android:layout_toLeftOf="@id/conversation_item_send_image_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="5px"/>
	        <ImageView
	            android:id="@+id/conversation_item_send_image_resend_btn"
	            android:layout_width="@dimen/retry_square_btn_width"
	            android:layout_height="@dimen/retry_square_btn_width"
	            android:background="@drawable/retry_btn_selector"
	            android:clickable="true"
	            android:visibility="gone"
	            android:layout_toLeftOf="@id/conversation_item_send_image_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="5px"/>
	    </RelativeLayout>
	    <!--rec_text_item-->
	    <RelativeLayout
	        android:id="@+id/conversation_item_rec_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:paddingBottom="3px">
	        <TextView
	            android:id="@+id/conversation_item_rec_text_user_name"
	            style="@style/UserNameStyle"/>
	        <TextView
	            android:id="@+id/conversation_item_rec_text_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:maxWidth="147px"
	            android:minWidth="50px"
	            android:minHeight="45px"
	            android:gravity="center_vertical"
	            android:text="@string/app_name"
	            android:layout_centerVertical="true"
	            android:textSize="@dimen/rec_text_size"
	            android:background="@drawable/answer_bg"
	            android:layout_below="@id/conversation_item_rec_text_user_name"/>
	    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>