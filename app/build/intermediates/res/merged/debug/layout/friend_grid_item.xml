<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_color">
    <com.readboy.view.FriendGridItem
        android:id="@+id/friend_item"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    <FrameLayout 
	        android:id="@+id/avatar"
	        android:layout_width="80px"
	        android:layout_height="80px"
	        android:layout_marginLeft="20px"
	        android:layout_marginRight="20px"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10px">
	        <ImageView
		        android:id="@+id/friend_pager_item_img"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/common"/>
		    <ImageView
		        android:id="@+id/friend_pager_item_img_mask"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/avatar_mask"/>
	    </FrameLayout>
	    <TextView
	        android:id="@+id/friend_pager_item_unread"
	        android:layout_width="24px"
	        android:layout_height="24px"
	        android:background="@drawable/unread_bg"
	        android:textColor="@android:color/white"
	        android:textSize="16px"
	        android:visibility="gone"
	        android:gravity="center"
	        android:layout_marginTop="6px"
	        android:layout_marginLeft="80px"/>
	    <TextView 
	        android:id="@+id/friend_pager_item_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20px"
	        android:maxWidth="100px"
	        android:maxLines="1"
	        android:ellipsize="end"
	        android:layout_below="@id/avatar"
	        android:textColor="@android:color/white"
	        android:layout_centerHorizontal="true"/>
	</com.readboy.view.FriendGridItem>
</FrameLayout>
