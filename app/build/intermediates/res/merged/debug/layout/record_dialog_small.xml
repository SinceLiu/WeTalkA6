<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/square_screen_width"
    android:layout_height="@dimen/square_screen_width"
    android:layout_gravity="center">
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:alpha="0.98"/>
    <ImageView
        android:id="@+id/record_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@anim/record_ing"
        android:layout_centerVertical="true"/>
    <TextView 
        android:id="@+id/record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:textSize="24px"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"/>
    <ImageView 
        android:id="@+id/record_state"
        android:layout_width="120px"
        android:layout_height="48px"
        android:src="@drawable/record_btn_nor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1px"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>