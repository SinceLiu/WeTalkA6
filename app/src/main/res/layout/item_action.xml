<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/group_members_width"
    android:layout_height="@dimen/group_members_height"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/group_members_action"
        android:layout_width="@dimen/item_action_add_group_size"
        android:layout_height="@dimen/item_action_add_group_size"
        android:layout_gravity="center"
        android:src="@drawable/btn_action_add_selector" />

    <TextView
        android:id="@+id/group_members_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_group_memebers_name_margin_top"
        android:textColor="#cdcdcd"
        android:textSize="@dimen/item_group_memebers_name_text_size" />

</LinearLayout>