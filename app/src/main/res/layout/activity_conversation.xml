<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/conversation_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.readboy.widget.ImageIndication
        android:id="@+id/image_indication"
        android:layout_width="@dimen/image_indication_width"
        android:layout_height="@dimen/image_indication_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/image_indication_margin_top"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

</FrameLayout>