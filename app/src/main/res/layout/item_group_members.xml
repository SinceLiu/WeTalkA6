<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_members_parent"
    android:layout_width="@dimen/group_members_width"
    android:layout_height="@dimen/group_members_height"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/group_members_icon"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:src="@drawable/common" />

        <ImageView
            android:id="@+id/group_members_add"
            android:layout_width="22px"
            android:layout_height="22px"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="43px"
            android:src="@drawable/ic_add_selector" />
    </FrameLayout>

    <TextView
        android:id="@+id/group_members_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6px"
        android:maxLines="1"
        android:textColor="#cdcdcd"
        android:textSize="16px" />

</LinearLayout>