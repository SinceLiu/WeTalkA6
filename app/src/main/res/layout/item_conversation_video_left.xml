<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/item_conversation_margin_end"
    android:orientation="vertical"
    android:paddingStart="@dimen/item_conversation_padding_start">

    <include layout="@layout/item_conversation_header" />

    <TextView
        android:id="@+id/item_conversation_name"
        style="@style/UserNameStyle"
        tools:text="@string/app_name"
        tools:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_conversation_video_content_parent_padding_bottom">

        <ImageView
            android:id="@+id/item_conversation_content"
            android:layout_width="@dimen/item_conversation_video_content_size"
            android:layout_height="@dimen/item_conversation_video_content_size"
            tools:src="@drawable/wetalk_icon" />

        <ImageView
            android:layout_width="@dimen/item_conversation_video_content_size"
            android:layout_height="@dimen/item_conversation_video_content_size"
            android:src="@drawable/video_mask_left" />

        <ImageView
            android:layout_width="@dimen/item_conversation_video_tag_size"
            android:layout_height="@dimen/item_conversation_video_tag_size"
            android:layout_marginLeft="@dimen/item_conversation_video_tag_margin"
            android:layout_marginTop="@dimen/item_conversation_video_tag_margin"
            android:contentDescription="item_conversation_video_tag"
            android:src="@drawable/ic_video" />

        <ImageView
            android:id="@+id/item_conversation_progress_bar"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_conversation_video_progress_bar_margin_horizontal"
            android:layout_toRightOf="@+id/item_conversation_content"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/item_conversation_retry"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_conversation_video_retry_margin_horizontal"
            android:layout_toRightOf="@+id/item_conversation_content"
            android:background="@drawable/retry_btn_selector"
            android:clickable="true"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

</LinearLayout>