<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_request_friend_title_margin_top"
        android:text="@string/request_friend_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dialog_request_friend_title_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/window_friend_request_content_margin_top"
        android:layout_weight="1"
        android:text="@string/request_friend_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dialog_request_friend_content_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/window_friend_request_button_margin_horizontal"
        android:layout_marginEnd="@dimen/window_friend_request_button_margin_horizontal"
        android:layout_marginBottom="@dimen/window_friend_request_button_margin_bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friend_request_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_refuse_selector" />

        <Button
            android:id="@+id/friend_request_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/window_friend_request_confirm_margin_left"
            android:layout_weight="1"
            android:background="@drawable/btn_agree_selector" />

    </LinearLayout>

</LinearLayout>