<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:text="@string/request_friend_title"
        android:textColor="@android:color/white"
        android:textSize="24px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8px"
        android:layout_weight="1"
        android:text="@string/request_friend_content"
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9px"
        android:layout_marginEnd="9px"
        android:layout_marginBottom="5px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friend_request_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_refuse_selector" />

        <Button
            android:id="@+id/friend_request_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:layout_weight="1"
            android:background="@drawable/btn_agree_selector" />

    </LinearLayout>

</LinearLayout>