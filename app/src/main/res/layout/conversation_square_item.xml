<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <!--rec_voice_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_rec_voice_item"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/conversation_item_rec_voice_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="3px">
            <com.readboy.view.CircleImageView 
	            android:id="@+id/conversation_item_rec_voice_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_rec_voice_user_name"
	            style="@style/UserNameStyle"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/conversation_item_rec_voice_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/conversation_item_rec_voice_user_info">
            <ImageView
                android:layout_width="135px"
                android:layout_height="45px"
                android:src="@drawable/answer_bg_selector"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical|right"/>
            <ImageView
                android:id="@+id/conversation_item_rec_voice_play_anim"
                android:layout_width="15px"
                android:layout_height="20px"
                android:background="@anim/play"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20px"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/conversation_item_rec_voice_play_imgv"
                android:layout_width="15px"
                android:layout_height="20px"
                android:background="@drawable/play3"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20px"/>
            <TextView
	            android:id="@+id/conversation_item_rec_voice_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="25px"
	            android:textColor="@android:color/black"
	            android:text="@string/app_name"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="20px"/>
        </FrameLayout>
        <View
            android:id="@+id/conversation_item_rec_voice_unread"
            android:layout_width="@dimen/conversation_play_width"
            android:layout_height="@dimen/conversation_play_width"
            android:background="@drawable/unread_bg"
            android:layout_marginTop="20px"
            android:layout_marginLeft="6px"
            android:layout_toRightOf="@id/conversation_item_rec_voice_play"/>
    </RelativeLayout>
    <!--send_voice_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_send_voice_item"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone">
        <ImageView
            android:id="@+id/conversation_item_send_voice_progress"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:visibility="gone"
            android:layout_margin="6px"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/conversation_item_send_voice_resend_btn"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:background="@drawable/retry_btn_selector"
            android:visibility="gone"
            android:clickable="true"
            android:layout_margin="6px"
            android:layout_centerVertical="true"/>
        <LinearLayout 
            android:id="@+id/conversation_item_send_voice_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3px">
	        <com.readboy.view.CircleImageView 
	            android:id="@+id/conversation_item_send_voice_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_send_voice_user_name"
	            style="@style/UserNameStyle"
	            android:text="@string/me"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/conversation_item_send_voice_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/conversation_item_send_voice_user_info">
            <ImageView
                android:layout_width="135px"
                android:layout_height="45px"
                android:src="@drawable/send_voice_bg_selector"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/conversation_item_send_voice_play_anim"
                android:layout_width="15px"
                android:layout_height="20px"
                android:background="@anim/play_wht"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginLeft="15px"/>
            <ImageView
                android:id="@+id/conversation_item_send_voice_play_imgv"
                android:layout_width="15px"
                android:layout_height="20px"
                android:background="@drawable/play_wht3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15px"/>
	        <TextView
	            android:id="@+id/conversation_item_send_voice_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="25px"
	            android:textColor="@android:color/white"
	            android:text="@string/app_name"
	            android:layout_gravity="center_vertical|right"
	            android:layout_marginRight="20px"/>
        </FrameLayout>
    </RelativeLayout>
    <!--rec_emoji_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_rec_emoji"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/conversation_item_rec_emoji_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="3px">
	        <com.readboy.view.CircleImageView 
	            android:id="@+id/conversation_item_rec_emoji_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_rec_emoji_user_name"
	            style="@style/UserNameStyle"/>
        </LinearLayout>
        <ImageView
            android:layout_width="80px"
            android:layout_height="45px"
            android:background="@drawable/answer_bg"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/conversation_item_rec_emoji_user_info"
            android:layout_marginLeft="6px"/>
        <ImageView
            android:id="@+id/conversation_item_rec_emoji_content"
            android:layout_width="@dimen/friend_pager_item_unread_width"
            android:layout_height="@dimen/friend_pager_item_unread_width"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/conversation_item_rec_emoji_user_info"
            android:layout_marginLeft="26px"/>
    </RelativeLayout>
    <!--send_emoji_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_send_emoji"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/conversation_item_send_emoji_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3px">
	        <com.readboy.view.CircleImageView 
	            android:id="@+id/conversation_item_send_emoji_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_send_emoji_user_name"
	            style="@style/UserNameStyle"
	            android:text="@string/me"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/conversation_item_send_emoji_bg"
            android:layout_width="80px"
            android:layout_height="45px"
            android:background="@drawable/play_bg"
            android:layout_toLeftOf="@id/conversation_item_send_emoji_user_info"
            android:layout_centerVertical="true"
            android:layout_marginRight="8px"/>
        <ImageView
            android:id="@+id/conversation_item_send_emoji_content"
            android:layout_width="@dimen/friend_pager_item_unread_width"
            android:layout_height="@dimen/friend_pager_item_unread_width"
            android:layout_toLeftOf="@id/conversation_item_send_emoji_user_info"
            android:layout_centerVertical="true"
            android:layout_marginRight="28px"/>
        <ImageView
            android:id="@+id/conversation_item_send_emoji_progress"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:visibility="gone"
            android:layout_toLeftOf="@id/conversation_item_send_emoji_bg"
            android:layout_margin="6px"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/conversation_item_send_emoji_resend_btn"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:background="@drawable/retry_btn_selector"
            android:visibility="gone"
            android:clickable="true"
            android:layout_toLeftOf="@id/conversation_item_send_emoji_bg"
            android:layout_margin="6px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <!--rec_image_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_rec_image"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/conversation_item_rec_image_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="3px">
	        <com.readboy.view.CircleImageView 
	            android:id="@+id/conversation_item_rec_image_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_rec_image_user_name"
	            style="@style/UserNameStyle"/>
	    </LinearLayout>
        <com.readboy.view.DialogImageView
            android:id="@+id/conversation_item_rec_image_content"
            android:layout_width="@dimen/conversation_rec_image_width"
            android:layout_height="@dimen/conversation_rec_image_height"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6px"
            android:layout_toRightOf="@id/conversation_item_rec_image_user_info"/>
    </RelativeLayout>
    <!--send_image_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_send_image"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/conversation_item_send_image_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3px">
	        <com.readboy.view.CircleImageView
	            android:id="@+id/conversation_item_send_image_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_send_image_user_name"
	            style="@style/UserNameStyle"
	            android:text="@string/me"/>
        </LinearLayout>
        <com.readboy.view.SendDialogImageView
            android:id="@+id/conversation_item_send_image_content"
            android:layout_width="@dimen/conversation_rec_image_width"
            android:layout_height="@dimen/conversation_rec_image_height"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="8px"
            android:layout_toLeftOf="@id/conversation_item_send_image_user_info"/>
        <ImageView
            android:id="@+id/conversation_item_send_image_progress"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:visibility="gone"
            android:layout_toLeftOf="@id/conversation_item_send_image_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5px"/>
        <ImageView
            android:id="@+id/conversation_item_send_image_resend_btn"
            android:layout_width="@dimen/retry_square_btn_width"
            android:layout_height="@dimen/retry_square_btn_width"
            android:background="@drawable/retry_btn_selector"
            android:clickable="true"
            android:visibility="gone"
            android:layout_toLeftOf="@id/conversation_item_send_image_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5px"/>
    </RelativeLayout>
    <!--rec_text_item-->
    <RelativeLayout
        android:id="@+id/conversation_item_rec_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="15px"
        android:paddingBottom="15px">
        <LinearLayout 
            android:id="@+id/conversation_item_rec_text_user_info"
            android:layout_width="45px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="3px">
	        <com.readboy.view.CircleImageView 
	            android:id="@+id/conversation_item_rec_text_avatar"
	            android:layout_width="40px"
	            android:layout_height="40px"
	            android:src="@drawable/common"/>
	        <TextView
	            android:id="@+id/conversation_item_rec_text_user_name"
	            style="@style/UserNameStyle"/>
        </LinearLayout>
        <TextView
            android:id="@+id/conversation_item_rec_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="147px"
            android:minWidth="50px"
            android:minHeight="45px"
            android:layout_marginLeft="6px"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:textSize="@dimen/rec_text_size"
            android:background="@drawable/answer_bg"
            android:layout_toRightOf="@id/conversation_item_rec_text_user_info"/>
    </RelativeLayout>
</RelativeLayout>