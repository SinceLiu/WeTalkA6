<?xml version="1.0" encoding="utf-8"?>
<com.readboy.wetalk.view.FriendGridItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/avatar"
        android:layout_width="@dimen/item_friend_grid_avatar_size"
        android:layout_height="@dimen/item_friend_grid_avatar_size"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/item_friend_grid_avatar_margin_horizontal"
        android:layout_marginTop="@dimen/item_friend_grid_avatar_margin_top"
        android:layout_marginRight="@dimen/item_friend_grid_avatar_margin_horizontal">

        <ImageView
            android:id="@+id/friend_pager_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/common" />

        <ImageView
            android:id="@+id/friend_pager_item_img_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_mask" />
    </FrameLayout>

    <TextView
        android:id="@+id/friend_pager_item_unread"
        android:layout_width="@dimen/item_friend_grid_unread_size"
        android:layout_height="@dimen/item_friend_grid_unread_size"
        android:layout_marginLeft="@dimen/item_friend_grid_unread_margin_left"
        android:layout_marginTop="@dimen/item_friend_grid_unread_margin_top"
        android:background="@drawable/unread_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_friend_grid_unread_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/friend_pager_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:ellipsize="middle"
        android:maxWidth="@dimen/item_friend_grid_name_max_width"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_friend_grid_name_text_size" />
</com.readboy.wetalk.view.FriendGridItem>
